{% extends 'base.html.twig' %}

{% block title %}List des jeux!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Liste des jeux </h1>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <td>ID</td>
                <td>Titre</td>
                <td>Joueurs min</td>
                <td>Joueurs max</td>
                <td>Actions</td>

            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id}}</td>
                <td>{{ game.title}}</td>
                <td>{{ game.minPlayers}}</td>
                <td>{{ game.maxPlayers}}</td>
                <td>
                <a href="{{path ('app_admin_game_edit', {id:game.id})}}"><i class="fa fa-edit"></i></a>
                <a href="{{path ('app_admin_game_delete', {id:game.id})}}"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4"> Aucun jeu n'est enregistr√© </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

</div>
{% endblock %}
