{% extends "base.html.twig" %}

{% block title %} Nouvelle partie {% endblock %}

    {% block body %}
        {% set contest = form.vars.value %}
            {# la valise set permet de definir une variable sans un fichier twig
            NB: on nen peut pas changer la valeur d'une variable dans twig, il fait reutiliser la balise set #}
        <h2> Commencer une nouvelle partie de : {{ contest.game.title}} </h2>
            {# {{ form(form)}} #}

        {{ form_start(form) }}

            {{ form_row(form.players)}}

            <div class="row">
                <div class="col-3"> {{form_label(form.start_date)}} </div>
                <div class="col-9"> {{form_widget(form.start_date)}} </div>
            </div>
            {# {{ form_errors(form.start_date)}} #}
            {{ form_help(form.start_date)}}

            <button class="btn btn-secondary mt-3"> commencer </button>

        {{ form_end(form) }}
    {% endblock %}